@model dynamic
@if (Model != null)
{
    <div class="accordion" id="accordionExample">
        <div class="accordion-item">
            <h2 class="accordion-header" id="CustomerServiceDepartment">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    CustomerServiceDepartment
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="CustomerServiceDepartment" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    Some one is here! Hey hey! @Model.Customer.Id
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="accordion-item">
        <h2 class="accordion-header" id="CustomerServiceDepartment">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseTwo">
                CustomerServiceDepartment
            </button>
        </h2>
        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="CustomerServiceDepartment" data-bs-parent="#accordionExample">
            <div class="accordion-body">
                Sorry! There are not any employees here!
            </div>
        </div>
    </div>
}

